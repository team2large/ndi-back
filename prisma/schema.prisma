generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model siteVisits {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  ipAddress String
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  firstName     String
  lastName      String
  admin         Boolean  @default(false)
  createdAt     DateTime @default(now())
  lastLoginDate DateTime @default(now())
}
